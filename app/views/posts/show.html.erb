<div class="container">

	<div class="row">
		<div class="col-md-8">					
			<h1>
				<%= @post.title %>
			</h1>

			<p>
				Written <%= time_ago_in_words(@post.created_at) %> ago
			</p>
	
				<% @post.body.split("\n").each do |paragraph| %>
				<p>
					<%= paragraph.html_safe %>
				</p>
				<% end %>
		</div>
	</div>
	<div class="row">
		
		<% if user_signed_in? %>

		<%= link_to 'Edit', edit_post_path(@post) %>
		<%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: "Are you certain?" } %>

		<% end %>
		
		<div class="col-md-12 pb-5">
			<div>
				<%= link_to 'Return to Home page', root_path, class: "btn btn-success" %>	
			</div>
			<div class="mt-3">
				<%= link_to 'Return to Blog page', posts_path, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
</div>